<form action="/addmarket" method="POST">
  <div class="field">
    <label class="label">Enter Flea Market Name</label>
    <input class="input" type="text" placeholder="Flea Market Name" name="marketname" />
  </div>
  <div>
    <div class=" box field is-horizontal">
      <div class="field-body ml-6">
        <div class="control is-expanded mt-2">
          <input class=" radio" type="radio" name="category" value="antiques" />
          Antiques
          <input class="radio" type="radio" name="category" value="vintage clothes" />
          Vintage Clothes
          <input class=" radio" type="radio" name="category" value="cric-a-brac" />
          Bric-a-brac
          <input class="radio" type="radio" name="category" value="vintage clothes" />
          Vintage Clothes
        </div>
      </div>
      <div class="field-body">
        <div class="select">
          <select name="country">
            {{#each countries}}
            <option value={{_id}}> {{countryname}}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
  </div>
  <div class="field mt-2">
    {{> coordinates}}
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-success is-fullwidth">Donate</button>
    </div>
  </div>
</form>